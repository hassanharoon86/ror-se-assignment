<%= form_with(model: blog) do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Enter blog title', autocomplete: 'on' %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: 'form-label' %>
    <%= form.text_area :body, class: 'form-control', placeholder: 'Write your blog content here', autocomplete: 'on' %>
  </div>

  <%= form.submit "Submit", class: 'btn btn-primary' %>
<% end %>
