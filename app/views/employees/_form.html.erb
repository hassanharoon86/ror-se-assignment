<div class="mb-3">
  <label for="name" class="form-label">Name</label>
  <%= text_field_tag :name, @employee&.dig("name"), class: 'form-control', placeholder: 'Enter employee name', autocomplete: 'off', autofocus: true %>
</div>

<div class="mb-3">
  <label for="position" class="form-label">Position</label>
  <%= text_field_tag :position, @employee&.dig("position"), class: 'form-control', placeholder: 'Enter employee position', autocomplete: 'off' %>
</div>

<div class="mb-3">
  <label for="salary" class="form-label">Salary</label>
  <%= number_field_tag :salary, @employee&.dig("salary"), class: 'form-control', placeholder: 'Enter employee salary', autocomplete: 'off' %>
</div>

<div class="mb-3">
  <label for="date_of_birth" class="form-label">Date of Birth</label>
  <%= date_field_tag :date_of_birth, @employee&.dig("date_of_birth"), class: 'form-control', placeholder: 'Select date of birth', autocomplete: 'off' %>
</div>
